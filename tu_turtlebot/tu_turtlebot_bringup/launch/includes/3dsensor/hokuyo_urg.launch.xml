<launch>
  <!-- "camera" should uniquely identify the device. All topics are pushed down
       into the "camera" namespace, and it is prepended to tf frame ids. -->
  <arg name="camera"      default="camera"/>
  <arg name="publish_tf"  default="false"/>
  <!-- Factory-calibrated depth registration -->
  <arg name="depth_registration"              default="false"/>
  <arg     if="$(arg depth_registration)" name="depth" value="depth_registered" />
  <arg unless="$(arg depth_registration)" name="depth" value="depth" />

  <!-- Processing Modules -->
  <arg name="rgb_processing"                  default="false"/>                                      
  <arg name="ir_processing"                   default="false"/>                                      
  <arg name="depth_processing"                default="false"/>                                      
  <arg name="depth_registered_processing"     default="false"/>                                      
  <arg name="disparity_processing"            default="false"/>                                      
  <arg name="disparity_registered_processing" default="false"/>                                      
  <arg name="scan_processing"                 default="false"/>                                      
                                                                                                    
  <!-- Worker threads for the nodelet manager -->                                                   
  <arg name="num_worker_threads" default="4" />                                                     



	<node type="urg_node" pkg="urg_node" name="base_laser_rear" output="screen">  
		<param name="min_ang" value="-1.8" />
		<param name="max_ang" value="1.8" />
		<remap from="/scan" to="/base_scan_rear"/>
		<param name="port" value="/dev/sensors/urg_rear"/>
		<param name="frame_id" value="/base_laser_rear_link" />
	</node>

	<!-- configure the transform for urg -->
	<node pkg="tf" type="static_transform_publisher" name="front_urg_frame" 
		  args="0 0 0 0 0 0 /base_laser_front_link /laser 100" />

	<node pkg="tf" type="static_transform_publisher" name="rear_urg_frame" 
	      args="-0.11 0 0.06 3.141592 0 0 /plate_link /base_laser_rear_link 100" />
	<node pkg="tf" type="static_transform_publisher" name="rear_urg_frame" 
	        args="-0.18 0 -0.06 3.141592 0 0 /plate_link /base_laser_rear_link 100" />
</launch>
